<div>
  {{link-to "go back" "index"}}
</div>

{{default-attributes}}

<h2>
  Registered Components
</h2>
{{#each registeredComponents as |component|}}
  <div>
    {{#if component.nonDefaultAttributeBindings}}
      <span class="pointer" {{action "toggle" component}}>
        {{#if component.isExpanded}}
          &#8863;
        {{else}}
          &#8862;
        {{/if}}
      </span>
    {{/if}}
    {{component.tagName}}
  </div>
  {{#if component.isExpanded}}
    <div>
      Non-default attributes
    </div>
    <ul>
      {{#each component.nonDefaultAttributeBindings as |attribute|}}
        <li>
          {{attribute}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
{{/each}}